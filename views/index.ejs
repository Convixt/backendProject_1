<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
   <div class="main w-full min-h-screen bg-zinc-900 ">
    <div class="form  p-10 text-white">
        <form action="/create" method="post">
            <input name="title" class=" block w-full rounded-md outline-none py-2 px-5 bg-zinc-800 " type="text"  placeholder="Title goes here...">
            <textarea name="details"  class=" block w-full rounded-md outline-none py-2 px-5 bg-zinc-800  mt-2 resize-none " placeholder="Write your task details here.." ></textarea>
            <input class="mt-2 bg-blue-600 rounded-md px-5 py-2 "  type="submit" value="Create Task">

        </form>
    </div>
    <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length > 0){%>
            <% files.forEach(function(val){%>

                 <div class="task min-width  px-3 py-4 bg-zinc-800 rounded-md">
            <h1 class="text-3xl text-white tracking-tight"> <%= val %> </h1>
            <div class="flex w-full justify-between items-center mt-3">
            <a class="text-blue-500  inline-block " href="/file/<%= val %> ">Read more...</a>
            <a class="text-zinc-600 " href="/edit/<%= val %>">Edit</a>
            </div>
            
        </div>

                <% }) %>
                <%}else{%>
                    <h2 class="text-white text-lg">No tasks yet</h2>


               <% } %>

        
       
        

        

    </div>
   </div>
  </body>
</html>
</html>